{{#section 'title'}}
<title>Add</title>
{{/section}}

<div class="card shadow mb-4">
  <h4 class="card-header">
    New Sub-Category
  </h4>
  <div class="card-body">
    <form method="POST">
      <div class="form-group">
        <label for="ParentID">Category ID</label>
        <input type="text" class="form-control" name="ParentID" value="{{category.CatID}}" readonly>
      </div>
      <div class="form-group">
        <label for="">Category Name</label>
        <input type="text" class="form-control" value="{{category.CatName}}" readonly>
      </div>
      <div class="form-group">
        <label for="txtCatName">Sub-Category</label>
        <input type="text" class="form-control" id="txtCatName" name="CatName" placeholder="Enter sub-category name"
          autofocus>
      </div>
      <a class="btn btn-outline-primary" href="/admin/categories/{{category.CatID}}" role="button">
        <i class="fa fa-backward" aria-hidden="true"></i>
        List
      </a>
      <button type="submit" class="btn btn-outline-success">
        <i class="fa fa-check" aria-hidden="true"></i>
        Save
      </button>
    </form>
  </div>
  <div class="card-footer text-muted">
    Footer
  </div>
</div>