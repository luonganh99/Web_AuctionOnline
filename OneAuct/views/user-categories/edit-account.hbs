<!-- User -->
<div class="userpage-content col-9">
    
    <div class="title breadcrumb justify-content-center">Thông tin cá nhân </div>
    <div class="row mt-5">
        <div class="info_form col-8">
            <div class="name item">
                <div class="head-item">Tên</div>
                <div class="content-item">
                    <input type="text">
                </div>
            </div>
            <div class="emai item">
                <div class="head-item">Email</div>
                <div class="content-item">
                    <div class="mr-3">ng****@gmail.com</div>
                    <a href="#">Thay đổi</a>
                </div>
            </div>
            <div class="phone item">
                <div class="head-item">Số Điện Thoại</div>
                <div class="content-item">
                    <div class="mr-3">********82</div>
                    <a href="#">Thay đổi</a>
                </div>
            </div>
            <div class="gender item">
                <div class="head-item">Giới Tính</div>
                <div class="content-item">
                    <input type="radio" name="gender" value="male"> Nam
                    <input type="radio" name="gender" value="female"> Nữ
                    <input type="radio" name="gender" value="other"> Khác
                </div>
            </div>
            <div class="birthdate item">
                <div class="head-item">Ngày Sinh</div>
                <div class="content-item">
                    <input type="date">
                </div>
            </div>
            <div class="submit">
                <button class="submit-button mt-0">Lưu</button>
            </div>
        </div>
        <div class="avatar_change col-4">
            <div class="d-flex flex-column align-items-center">
                <div class="mb-3">
                    <img src="/images/best_1.png" alt="">
                </div>
                <input class="mb-3" type="file" content="">
                <div>luonganh99</div>
            </div>
        </div>
    </div>

</div>



